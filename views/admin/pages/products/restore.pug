extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  h1(class="mb-4") Khôi phục sản phẩm
  +alert-restore(5000)
  +alert-deletePermanent(5000)
  .card.mb-3
    .card-header Danh sách sản phẩm đã xóa
    .card-body
      table(
        class="table table-hover table-sm"
        checkbox-multi
      )
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động

        tbody
          each item, index in products
            tr
              td
                input(
                  type="checkbox"
                  name="id"
                  value=item.id
                )
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.name
                  width="100px"
                  height="auto"
                )
              td #{item.name}
              td #{item.price.toLocaleString('vi-VN')} VNĐ
              td
                span(class="badge text-bg-secondary") Đã xóa
              td
                button(
                  class="btn btn-primary btn-sm"
                  data-id=item.id
                  button-restore-item
                ) Khôi phục
                button(
                  class="btn btn-danger btn-sm ml-1"
                  data-id=item.id
                  button-delete-permanently
                ) Xóa vĩnh viễn
  form(
    action=""
    method="POST"
    id="form-restore-item"
    data-path=`${prefixAdmin}/products/restore`
  )

  form(
    action=""
    method="POST"
    id="form-delete-permanent"
    data-path=`${prefixAdmin}/products/delete-permanent`
  )
 
    script(src="/admin/js/product.js") 