extends ../../layouts/default.pug

block main
  h1(class="mb-4") Thêm mới sản phẩm

  form(
    class="frm"
    action=`${prefixAdmin}/products/create`
    id="form-create-product"
    method="POST"
  )
    //- Tiêu đề
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="name"
        required
      )

    //- Mô tả
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
      )

    //- Giá
    div(class="form-group")
      label(for="price") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value="0"
        min="0"
      )

    //- Giảm giá
    div(class="form-group")
      label(for="discount") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discount"
        value="0"
        min="0"
      )

    //- Số lượng
    div(class="form-group")
      label(for="stock") Số lượng
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value="0"
        min="0"
      )

    //- Ảnh Thumbnail
    div(class="form-group")
      label(for="thumbnail") Ảnh
      input(
        type="text"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
      )

    //- Vị trí
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )

    //- Trạng thái Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-label") Hoạt động

    //- Trạng thái Dừng hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động

    //- Nút Submit
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới

  script(src="/admin/js/product.js")