extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
  .container.my-3
    .row
      .col-12
        +box-head("Danh sách sản phẩm")
    
    .row
      each item in products
        .col-4.mb-3
          .product-item
          .inner-image
            img(
              src=item.thumbnail, 
              alt=item.name
            )
          .inner-content
              a(href=`products/${item.slug}` class=".inner-title") #{item.name}
              
              .inner-price-new #{item.priceNew} VNĐ 
              .inner-price-old #{item.priceOld} VNĐ
              .inner-discount #{item.discount} %